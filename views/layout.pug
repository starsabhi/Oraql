doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/main.css')
        link(href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet")
        <link rel="icon" type="image/png" href="/favicon.png"/>
  body
    div(class='navBar')
      div(class='navbarContent')
        div(class='navObject')
          img(src="/images/oraql-logo.png" class='smallOraqlLogo')
        div(class='navObject')
          a(href="/")
            img(src="/images/oraql-home-icon.png" class='navIcon')
        div(class='navObject')
          form(action="/search/results" method="post" id="searchDiv")
            input(type="text" name="searchText" class="searchBar" placeholder='Search' maxlength='50')
            button(type='submit' class='searchButton')
              img(src="/images/searchicon.png" id="magGlass")
        div(class='navObject hoverAnimate')
          a(href='/questions/new' class='askbtn formButton') Ask Question
        div
          if locals.authenticated
            div hello #{user.username}
            form(action='/users/log-out', method='post')
              button(type='submit') Log Out
          else
            div(class='signandlogin')
              div(class='accountAnchor')
                a(href='/users/log-in' class='accountAnchortext') Log In
              div(class='accountAnchor')
                a(href='/users/sign-up' class='accountAnchortext') Sign Up
              div(class='accountAnchor')
                a(href='/users/demo-login' class='accountAnchortext') Demo User
    div(class="navSpacer")
        //- div(class='navObject')
        //-   button()

    block content
