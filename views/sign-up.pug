extends layout.pug
include utils.pug
block content
    div(class='form-div')
        img(src="/images/oraql-logo.png" class='bigOraqlLogo')
        h2(class='formTitle') Create Account
        hr(class='divider')
        +validationErrorSummary(errors)
        form(action='/users/sign-up' method='post' class="loginForm")
            input(type='hidden' name='_csrf' value=csrfToken)
            +field('Username', 'username', user.username)
            +field('Email', 'email', user.email)
            +field('Password', 'password', user.password, 'password')
            +field('Confirm Password', 'confirmPassword', '', 'password')
            div(class="formLogin")
                button(type='submit' class='formButton' id="submitSign") Sign Up
            div(class='accountAnchor')
                p: a(href='/users/log-in' class='accountAnchortext' id="haveAcc") Already have an account?
