extends layout.pug
include utils.pug
block content
  div(class='form-div')
    h2(class='formTitle') #{question.content}
    h3 Do you want to delete this question?
    hr(class='divider')
    form(action=`/questions/${question.id}/delete` method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      div
        a(href=`/questions/${question.id}` class='formButton cancelButton') Cancel
      div
        button(type='submit' class='formButton') Delete
