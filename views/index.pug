extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  div(class="mainContentDiv")
    p(class="pText") Ask about supernatural encounters and phenomena, or answer a question with your expertise and experience!
    each question in questions
      div(class="questionDiv")
        a(href=`/questions/${question.id}` class="questionText") #{question.content}
        div
          span(class="userTag") #{question.User.username}
          span(class="userTag tag" id=`${question.Tag.tagName}`) ##{question.Tag.tagName}
